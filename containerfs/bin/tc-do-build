#!/bin/bash

set -euo pipefail
set -x

# Assume that the CWD is the source code folder.

mkdir -p build
cd build

cmake ../ -DCMAKE_INSTALL_PREFIX=/hostfs/tc-server/dist

make -j $(nproc)
make install

# copy out the conf files for easy comparison
rsync \
  --compress-level=0 \
  -arhW \
  --info=progress2 \
  /hostfs/tc-server/dist/etc/* /hostfs/tc-conf/